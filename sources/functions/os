#!/bin/bash

_os_distro() {
	source /etc/os-release
	printf "$ID"
}
export -f _os_distro

_os_codename() {
	source /etc/os-release
	printf "$VERSION_CODENAME"
}
export -f _os_codename

_os_pretty() {
	source /etc/os-release
	printf "$PRETTY_NAME"
}
export -f _os_pretty

_os_arch() {
	dpkg --print-architecture
}
export -f _os_arch
